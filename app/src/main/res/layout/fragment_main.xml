<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.main.MainFragment"
    android:background="@color/background_color">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:orientation="horizontal"
                android:background="@drawable/ic_mask"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/card_view_film" />

            <TextView
                android:id="@+id/text_top_new_films"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/top_new_films"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rw_top_new_films"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:scrollbars="horizontal"
                tools:listitem="@layout/view_holder_movie" />

            <TextView
                android:id="@+id/adventure_best"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adventures"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rw_adventure_best"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="match_parent"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:listitem="@layout/view_holder_movie"
                android:scrollbars="horizontal"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>